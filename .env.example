# API Configuration (Local mode - no backend required)
# VITE_URL_API is optional, app works without backend
VITE_URL_API=

# Application Configuration
NODE_ENV=production

# Cloud Providers Configuration
# GCP Configuration (for Apache Libcloud integration)
GCP_PROJECT_ID=your-gcp-project-id
GCP_CREDENTIALS_PATH=/path/to/credentials.json

# LXD Configuration (for Apache Libcloud integration)
LXD_ENDPOINT=https://your-lxd-server:8443
LXD_CERT_PATH=/path/to/client.crt
LXD_KEY_PATH=/path/to/client.key

# Etapa 2: Headscale Configuration (Pending)
HEADSCALE_URL=https://headscale.kapp4.com
HEADSCALE_API_KEY=your-api-key

# Etapa 3: Authentik Configuration (Pending)
AUTHENTIK_SECRET_KEY=change-this-to-a-random-string-min-50-chars
POSTGRES_PASSWORD=change-this-password
POSTGRES_USER=authentik
POSTGRES_DB=authentik

# Etapa 3: LDAP Configuration (Pending)
LDAP_ORGANISATION=Mi Empresa
LDAP_DOMAIN=kapp4.com
LDAP_ADMIN_PASSWORD=change-this-password

# Etapa 4: Remotely Configuration (Pending)
REMOTELY_DB_CONNECTION=Host=postgresql;Database=remotely;Username=remotely;Password=change-this

# Etapa 4: Guacamole Configuration (Pending)
GUACAMOLE_DB_PASSWORD=change-this-password

# Grafana Configuration
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin
