{
  "openapi": "3.0.0",
  "info": {
    "title": "TSPlus API",
    "version": "1.0.0",
    "description": "API para gestión de servidores TSPlus"
  },
  "servers": [
    {
      "url": "http://localhost:8005",
      "description": "Servidor de desarrollo"
    }
  ],
  "tags": [
    {
      "name": "Compute",
      "description": "Operaciones relacionadas con computación"
    },
    {
      "name": "Storage",
      "description": "Operaciones de almacenamiento"
    },
    {
      "name": "Users",
      "description": "Gestión de usuarios"
    }
  ],
  "paths": {
    "/commands/download_tsplus": {
      "post": {
        "summary": "Descargar TSPlus",
        "description": "Descarga e instala TSPlus en el servidor",
        "operationId": "downloadTSPlus",
        "tags": ["Compute"],
        "responses": {
          "200": {
            "description": "Descarga iniciada correctamente"
          }
        }
      }
    },
    "/activate/": {
      "post": {
        "summary": "Activar Licencia",
        "description": "Activa la licencia de TSPlus en el servidor",
        "operationId": "activate",
        "tags": ["Compute"],
        "parameters": [
          {
            "name": "licensePath",
            "in": "query",
            "description": "Ruta de la licencia",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Licencia activada correctamente"
          }
        }
      }
    },
    "/web_credentials/": {
      "get": {
        "summary": "Obtener Credenciales Web",
        "description": "Obtiene las credenciales web del servidor",
        "operationId": "getWebCredentials",
        "tags": ["Users"],
        "responses": {
          "200": {
            "description": "Credenciales obtenidas correctamente"
          }
        }
      }
    },
    "/audit/": {
      "put": {
        "summary": "Realizar Auditoría",
        "description": "Ejecuta una auditoría del sistema",
        "operationId": "audit",
        "tags": ["Storage"],
        "responses": {
          "200": {
            "description": "Auditoría completada"
          }
        }
      }
    },
    "/commands/install_tsplus/": {
      "post": {
        "summary": "Instalar Servidor de Licencia por Volumen",
        "description": "Instala y configura el servidor de licencias TSPlus",
        "operationId": "installVolumeLicenseServer",
        "tags": ["Compute"],
        "parameters": [
          {
            "name": "license",
            "in": "query",
            "description": "Clave de licencia",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "users": {
                    "type": "string",
                    "description": "Número de usuarios"
                  },
                  "edition": {
                    "type": "string",
                    "description": "Edición (Enterprise, Standard, Advanced)"
                  },
                  "supportyears": {
                    "type": "number",
                    "description": "Años de soporte"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Instalación completada"
          }
        }
      }
    }
  }
}
