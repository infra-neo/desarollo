# GCP Project Configuration
project_id   = "your-gcp-project-id"
project_name = "mcp-server"
region       = "us-central1"
zone         = "us-central1-a"
environment  = "production"

# Network Configuration
subnet_cidr = "10.0.0.0/24"

# Compute Configuration
machine_type       = "n1-standard-4"
boot_disk_size_gb  = 100

# SSH Configuration
ssh_user             = "ubuntu"
ssh_public_key_path  = "~/.ssh/id_rsa.pub"
ssh_allowed_ips      = ["0.0.0.0/0"]  # Restrict this to your IP addresses

# Application Configuration
domain          = "example.com"
create_dns_zone = false  # Set to true if you want Terraform to manage DNS

# Tailscale Configuration
tailscale_auth_key = "tskey-auth-xxxxx-xxxxxxxxxxxxxxxx"

# Authentik Configuration
authentik_secret_key = "changeme-secret-key-min-50-chars-long-please-generate-random"
