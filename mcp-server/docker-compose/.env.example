# MCP Server Environment Configuration
# Copy this file to .env and configure with your values

# Domain Configuration
DOMAIN=example.com
ACME_EMAIL=admin@example.com

# PostgreSQL Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=changeme-strong-password

# Authentik Configuration
AUTHENTIK_SECRET_KEY=changeme-secret-key-min-50-chars-long-please-change-this-to-random-string
AUTHENTIK_DB_PASSWORD=authentik_password_change_me
AUTHENTIK_LOG_LEVEL=info

# JumpServer Configuration
JUMPSERVER_SECRET_KEY=changeme-jumpserver-secret-key-random-string
JUMPSERVER_BOOTSTRAP_TOKEN=changeme-bootstrap-token-random-string
JUMPSERVER_DB_PASSWORD=jumpserver_password_change_me
JUMPSERVER_LOG_LEVEL=INFO

# JumpServer OIDC (Configure after Authentik setup)
JUMPSERVER_OIDC_CLIENT_ID=
JUMPSERVER_OIDC_CLIENT_SECRET=
JUMPSERVER_API_KEY=

# Infisical Configuration
INFISICAL_ENCRYPTION_KEY=changeme-encryption-key-32-chars
INFISICAL_JWT_SECRET=changeme-jwt-secret
INFISICAL_DB_PASSWORD=infisical_password_change_me
INFISICAL_SERVICE_TOKEN=

# Infisical OIDC (Configure after Authentik setup)
INFISICAL_OIDC_CLIENT_ID=
INFISICAL_OIDC_CLIENT_SECRET=

# WebAsset Controller Configuration
WEBASSET_OIDC_CLIENT_ID=
WEBASSET_OIDC_CLIENT_SECRET=

# 1Panel Configuration
PANEL_OIDC_CLIENT_ID=
PANEL_OIDC_CLIENT_SECRET=

# Tailscale Configuration
TS_AUTHKEY=
TAILSCALE_HOSTNAME=mcp-server
TS_EXTRA_ARGS=--advertise-tags=tag:mcp

# Traefik Configuration
TRAEFIK_LOG_LEVEL=INFO
